                                            <apex:outputField value="{!item.Contractor__c}" />
                                        </td>
                                        <td>
                                            <apex:outputField value="{!item.Total_Payment_Amount__c}"/>
                                        </td>
                                        <td>
                                            <apex:outputField value="{!item.Commissionable_Amount__c}"/>
                                        </td>
